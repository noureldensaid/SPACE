<resources>
    <!-- Base application theme. -->
    <style name="Space" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_background</item>
        <item name="colorPrimaryContainer">@color/pastel_blue</item>
        <item name="colorOnPrimaryContainer">@color/dark_blue</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_background</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_background</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_background</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_background</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_background</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/ghost_white</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/pastel_blue</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_background</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>


    <style name="AmenitiesStyles" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/md_theme_light_background</item>
    </style>


    <style name="NavStyles" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundColor">@color/md_theme_light_background</item>
        <item name="itemRippleColor">@color/md_theme_light_background</item>
    </style>

    <style name="CustomTimePickerTheme" parent="Theme.Material3.Light.Dialog">
        <item name="colorPrimary">@color/pastel_blue</item>
        <item name="colorOnPrimary">@color/baby_blue</item>
        <item name="colorSurface">@color/dark_blue</item>
    </style>

    <!--styles for profile fragment-->
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textSize">@dimen/material_text_headline_24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.settingsMiniTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/dimens_medium_16dp</item>
    </style>

    <style name="settingsText" parent="viewParent.headerText.settingsMiniTitle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="viewParent.headerText.settingsTextIcon" parent="settingsText">
        <item name="android:drawableEnd">@drawable/ic_more</item>
    </style>

    <style name="viewParent.headerText.logoutText" parent="settingsText" />


    <!--   calendar-->
    <style name="CalenderViewCustom" parent="Theme.Material3.Light">
        <item name="colorAccent">#DF7599</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="android:textColorPrimary">@color/dark_blue</item>
        <item name="backgroundColor">@color/md_theme_light_primary</item>
        <item name="backgroundTint">@color/md_theme_light_primary</item>
    </style>

    <!--    time picker-->
    <!--    <style name="TimePickerTheme" parent="Theme.Material3.Light">-->
    <!--        <item name="colorPrimary">#DF7599</item>-->
    <!--        <item name="colorAccent">@color/dark_blue</item>-->
    <!--    </style>-->

    <!--designs for login and register-->
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginParent" parent="parent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/loginBkColor</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="headerText" parent="parent">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginCard" parent="parent"></style>

    <style name="linearParent" parent="parent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="headerTextPrimary" parent="headerText">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>

    <style name="viewParentt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginButton" parent="viewParentt">
        <item name="android:background">@drawable/login_button_bk</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>