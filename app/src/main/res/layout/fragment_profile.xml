<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.profile.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileCircleImageView"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/userName"
                style="@style/viewParent.headerText"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/dimens_medium_16dp"
                android:layout_marginVertical="@dimen/dimens_medium_16dp"
                android:layout_toEndOf="@id/profileCircleImageView"
                android:fontFamily="@font/lato_bold"
                android:text="Nour"
                android:textSize="18sp" />

        </RelativeLayout>

        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:fontFamily="@font/lato_bold"
            android:text="Profile" />

        <TextView
            android:id="@+id/editProfileText"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:fontFamily="@font/lato_bold"
            android:padding="@dimen/dimens_small_8dp"
            android:text="Edit profile"
            android:textColor="@color/dark_blue"
            app:drawableStartCompat="@drawable/ic_edit_profile"
            app:drawableTint="@color/dark_blue" />

        <TextView
            android:id="@+id/changePasswordText"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_bold"
            android:padding="@dimen/dimens_small_8dp"
            android:text="Change password"
            android:textColor="@color/dark_blue"
            app:drawableStartCompat="@drawable/ic_change_psw"
            app:drawableTint="@color/dark_blue" />

        <TextView
            style="@style/viewParent.headerText.settingsTextIcon"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_bold"
            android:padding="@dimen/dimens_small_8dp"
            android:text="Ask to be a host"
            android:textColor="@color/dark_blue"
            app:drawableStartCompat="@drawable/ic_ask_to_be_host"
            app:drawableTint="@color/dark_blue" />

        <TextView
            android:id="@+id/reportProblem"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_bold"
            android:padding="@dimen/dimens_small_8dp"
            android:text="Report a problem"
            android:textColor="@color/dark_blue"
            app:drawableStartCompat="@drawable/ic_report"
            app:drawableTint="@color/dark_blue" />

        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:fontFamily="@font/lato_bold"
            android:text="Regional" />

        <TextView
            android:id="@+id/logout_btn"
            style="@style/viewParent.headerText.logoutText"
            android:fontFamily="@font/lato_bold"
            android:padding="@dimen/dimens_small_8dp"
            android:text="Logout"
            android:textColor="@color/dark_blue"
            app:drawableStartCompat="@drawable/ic_logout"
            app:drawableTint="@color/dark_blue" />
    </LinearLayout>
</ScrollView>