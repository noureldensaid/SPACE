<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.bookings.SuccessBookingFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_success_anim"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimens_huge_64dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/lottie_success" />

    <TextView
        android:id="@+id/tv_booking_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_btn_corner_radius_10dp"
        android:layout_marginVertical="@dimen/dimens_medium_16dp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/Booking_Successful"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/material_text_title_20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lottie_success_anim"
        app:layout_constraintStart_toStartOf="@+id/lottie_success_anim"
        app:layout_constraintTop_toBottomOf="@+id/lottie_success_anim" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimens_medium_16dp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/congratulations_your_booking_has_been_confirmed"
        android:textSize="@dimen/material_text_subhead_16sp"
        app:layout_constraintEnd_toEndOf="@+id/lottie_success_anim"
        app:layout_constraintStart_toStartOf="@+id/lottie_success_anim"
        app:layout_constraintTop_toBottomOf="@+id/tv_booking_success" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_huge_64dp"
        android:fontFamily="@font/lato_bold"
        android:padding="@dimen/dimens_medium_16dp"
        android:text="@string/go_to_bookings"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/material_text_subhead_16sp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/dimens_large_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="64dp" />


</androidx.constraintlayout.widget.ConstraintLayout>