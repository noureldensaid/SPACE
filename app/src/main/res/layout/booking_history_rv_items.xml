<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimens_small_8dp"
    app:cardCornerRadius="@dimen/dimens_large_24dp"
    app:cardElevation="@dimen/dimens_tiny_4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custome_border">


        <TextView
            android:id="@+id/workspace_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/lato_black"
            android:maxLines="2"
            android:paddingHorizontal="@dimen/dimens_medium_16dp"
            android:paddingTop="@dimen/dimens_small_8dp"
            android:paddingBottom="@dimen/dimens_tiny_4dp"
            android:text="WorkSpace"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dimens_medium_16dp"
            app:layout_constraintBottom_toTopOf="@+id/room_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dimens_medium_16dp"
            android:paddingBottom="@dimen/dimens_tiny_4dp"
            android:text="Room :"
            android:textColor="@android:color/black"
            android:textSize="@dimen/material_text_title_20sp"
            app:layout_constraintBottom_toTopOf="@id/workspace_time"

            app:layout_constraintStart_toStartOf="@id/workspace_name"
            app:layout_constraintTop_toBottomOf="@id/workspace_name" />


        <TextView
            android:id="@+id/workspace_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="@dimen/dimens_tiny_4dp"
            android:drawableTint="@color/dark_blue"
            android:ellipsize="end"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dimens_medium_16dp"
            android:paddingBottom="@dimen/dimens_tiny_4dp"
            android:text="09:30 to 19:00"
            android:textColor="@color/black"
            android:textSize="@dimen/material_text_subhead_16sp"
            app:layout_constraintBottom_toTopOf="@+id/workspace_price"
            app:layout_constraintStart_toStartOf="@+id/workspace_name"
            app:layout_constraintTop_toBottomOf="@+id/room_name" />

        <TextView
            android:id="@+id/workspace_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:paddingHorizontal="@dimen/dimens_medium_16dp"
            android:paddingBottom="@dimen/dimens_small_8dp"
            android:text=" Price : 70 EGP"
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btn_cancel_book"

            app:layout_constraintStart_toStartOf="@id/workspace_time"
            app:layout_constraintTop_toBottomOf="@+id/workspace_time" />

        <Button
            android:id="@+id/btn_cancel_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_medium_16dp"
            android:backgroundTint="#D3362A"
            android:text="Cancel Booking"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/baby_blue"
            android:text="Report Problem"
            android:textColor="@color/dark_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_cancel_book" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>