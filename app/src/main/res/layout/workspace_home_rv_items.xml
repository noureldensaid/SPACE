<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimens_large_32dp"
    app:cardCornerRadius="@dimen/dimens_medium_16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/workspace_iv"
            android:layout_width="180dp"
            android:layout_height="220dp"
            tools:src="@drawable/ic_favorite" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@id/workspace_iv"
            android:background="@drawable/gradient_reverse" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/workspace_iv"
            android:background="@drawable/gradient" />


        <TextView
            android:id="@+id/offer_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="@dimen/dimens_medium_16dp"
            android:layout_marginTop="@dimen/dimens_small_8dp"
            android:layout_marginBottom="@dimen/dimens_small_8dp"
            android:ellipsize="end"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="20% off"
            android:textAllCaps="true"
            android:textColor="@color/white_lilac"
            android:textSize="@dimen/material_text_subhead_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/workspace_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/workspace_iv"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dimens_small_8dp"
            android:layout_marginTop="@dimen/dimens_small_8dp"
            android:layout_marginBottom="@dimen/dimens_small_8dp"
            android:ellipsize="end"
            android:fontFamily="@font/lato_black"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="O-space"
            android:textAllCaps="false"
            android:textColor="@color/off_white"
            android:textSize="@dimen/dimens_medium_16dp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>


